<script>
// Mobile carousel functionality
document.addEventListener('DOMContentLoaded', () => {
  const carousel = document.querySelector('.mobile-carousel');
  if (!carousel) return; // Only run on mobile

  const items = document.querySelectorAll('.carousel-item');
  const prevBtn = document.querySelector('.prev-btn');
  const nextBtn = document.querySelector('.next-btn');
  const currentSlideEl = document.querySelector('.current-slide');
  const totalSlidesEl = document.querySelector('.total-slides');
  let currentSlide = 0;

  // Set total slides
  totalSlidesEl.textContent = items.length;

  function showSlide(index) {
    // Remove active class from all items
    items.forEach(item => item.classList.remove('active'));

    // Wrap around if necessary
    if (index >= items.length) {
      currentSlide = 0;
    } else if (index < 0) {
      currentSlide = items.length - 1;
    } else {
      currentSlide = index;
    }

    // Add active class to current item
    items[currentSlide].classList.add('active');
    
    // Update counter (add 1 because we want 1-based counting for display)
    currentSlideEl.textContent = currentSlide + 1;
  }

  // Next button
  nextBtn.addEventListener('click', () => {
    showSlide(currentSlide + 1);
  });

  // Previous button
  prevBtn.addEventListener('click', () => {
    showSlide(currentSlide - 1);
  });

  // Optional: Auto-advance carousel every 5 seconds
  // setInterval(() => {
  //   showSlide(currentSlide + 1);
  // }, 5000);

  // Optional: Swipe support
  let touchStartX = 0;
  let touchEndX = 0;

  const carouselContainer = document.querySelector('.carousel-container');

  carouselContainer.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  carouselContainer.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });

  function handleSwipe() {
    if (touchEndX < touchStartX - 50) {
      // Swipe left - next
      showSlide(currentSlide + 1);
    }
    if (touchEndX > touchStartX + 50) {
      // Swipe right - previous
      showSlide(currentSlide - 1);
    }
  }
});
</script>

